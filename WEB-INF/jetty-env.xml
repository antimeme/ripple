<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN"
          "http://www.eclipse.org/jetty/configure_9_3.dtd">
<Configure id="wac" class="org.eclipse.jetty.webapp.WebAppContext">
  <New id="ExpenseDB" class="org.eclipse.jetty.plus.jndi.Resource">
    <Arg><Ref refid="wac"/></Arg><!-- reference to WebAppContext -->
    <Arg>jdbc/ExpenseDB</Arg>
    <Arg>
      <New class="org.sqlite.javax.SQLiteConnectionPoolDataSource">
        <Set name="url">jdbc:sqlite:/var/local/db/expense.db</Set>
      </New>
    </Arg>
  </New>
</Configure>
